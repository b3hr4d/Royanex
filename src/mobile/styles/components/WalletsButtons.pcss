.cr-mobile-wallets-buttons {
  align-items: center;
  background: var(--body-background-color);
  border: 0;
  bottom: 0;
  display: flex;
  height: 90px;
  justify-content: space-between;
  left: 0;
  padding: 0 17px;
  position: fixed;
  right: 0;
  z-index: 9999;

  button {
    font-size: 15px;
    flex: 1;

    &:first-child {
      margin-left: 11px;
    }
  }
}
