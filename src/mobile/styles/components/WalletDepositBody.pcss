/* stylelint-disable */
.cr-mobile-wallet-deposit-body {
  .cr-wallet-item__single {
    display: none;
  }
  .cr-deposit-crypto {
    background: var(--body-background-color);
    display: flex;
    padding: 0 14px 30px 14px;
    .cr-deposit-info {
      font-size: 14px;
      text-align: left;
    }
    .cr-copyable-text-field {
      border: none;
    }
    .qr-code {
      margin: 0 0 0 20px;
    }
    .input-group {
      display: flex;
      flex-direction: column;
      align-items: center;
      .input-group-append {
        button {
          width: 131px;
          padding: 0;
          font-size: 14px;
          height: 27px;
          border-radius: 2px;
          margin: 10px 0;
        }
      }
      .custom-input {
        width: 100%;
        margin: 10px 0;
        label {
          left: 0;
          padding-left: 0;
          margin-bottom: 10px;
        }
        input {
          padding: 15px 0;
        }
      }
    }
    & > div {
      &:first-child {
        order: 1;
        margin-top: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        p{
          text-align: right;
        }
      }
    }
    .d-none {
      display: block !important;
    }
  }

  .cr-deposit-fiat {
    background: var(--body-background-color);
    font-size: 14px;

    &-credentials {
      width: 100%;
    }

    &__title {
      color: var(--primary-text-color);
    }
  }
}
